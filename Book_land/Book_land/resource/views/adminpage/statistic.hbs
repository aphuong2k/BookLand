<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>
    </div>
    <div class="dash-content">
        <div class="activity">
            <div class="title">
                <i class="uil uil-clock-three"></i>
                <span class="text">Statistic in {{month}} </span>
            </div>

            <div>
                <div class="col-lg-11">
                    <h4 style="color: var(--text-color);">Select Month</h4>
                    <select name="month" id="month" class="form-control">
                        <option value="" selected hidden>{{month}}</option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April </option>
                        <option value="5">May </option>
                        <option value="6">June </option>
                        <option value="7">July </option>
                        <option value="8">August </option>
                        <option value="9">September </option>
                        <option value="10">October </option>
                        <option value="11">November </option>
                        <option value="12">December </option>
                    </select>
                    <br>
                    <button type="button" class="btn btn-primary" id="submit" style="color: var(--text-color);">Submit</button>
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <h3 style="color: var(--text-color);">Statistic Order</h3>
                            <table class="table-bordered check-tbl mb-4"
                                style="color: var(--text-color) !important;border-color:var(--text-color)">
                                <tbody>
                                    {{#each order}}
                                    <tr>
                                        <td>Number of orders</td>
                                        <td class="product-price">{{this.count}}</td>
                                    </tr>
                                    <tr>
                                        <td>Total($)</td>
                                        <td>{{this.total}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <h3 style="color: var(--text-color);">Statistic Order Input</h3>
                            <table class="table-bordered check-tbl mb-4"
                                style="color: var(--text-color) !important;border-color:var(--text-color)">
                                <tbody>
                                    {{#each orderInput}}
                                    <tr>
                                        <td>Number of orders</td>
                                        <td class="product-price">{{this.count}}</td>
                                    </tr>
                                    <tr>
                                        <td>Total($)</td>
                                        <td>{{this.total}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="">
                        <div class="table-responsive">
                            <h3 style="color: var(--text-color);">Top 5 Best Sale In Month</h3>
                            <table class="table " style="color:var(--text-color);border-color:var(--text-color)">
                                <thead>
                                    <tr>
                                        <th>Cardinal numbers</th>
                                        <th>Product Id</th>
                                        <th>Product Name</th>
                                        <th>Image</th>
                                        <th>Quantity</th>
                                        <th>Price Input($)</th>
                                        <th>Price Output($)</th>
                                    </tr>
                                </thead>
                                <tbody id="myTable">
                                    {{#each best}}
                                    <tr>
                                        <td>{{sum @index 1}}</td>
                                        <td>{{this.product_id}}</td>
                                        <td>{{this.product_name}}</td>
                                        <td class="product-item-img"><img src="/images/products/{{this.image}}" alt=""
                                                style="border-style: none;height: 99.24px;max-width: 65.9px;object-fit: cover;vertical-align: middle;">
                                        </td>
                                        <td>{{this.quantity}}</td>
                                        <td>{{this.price_input}}</td>
                                        <td>{{this.price_output}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
